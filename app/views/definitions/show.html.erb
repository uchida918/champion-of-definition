<%= @definition.inspect %>

<div class="text-center">
  <h1>「<%= @definition.term %>」の詳細</h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@definition) do |f| %>

      <div class="form-group">
        <%= f.label :category_id, '分野' %>
        <%= f.collection_select :category_id, Category.all, :id, :name %>
      </div>

      <div class="form-group">
        <%= f.label :term, '定義' %>
        <%= f.text_field :term, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :body, '内容' %>
        <%= f.text_field :body, class: 'form-control' %>
      </div>
    <% end %>
  </div>
</div>

<div>
  <% if @definition.user != current_user %>
    <% if @definition.user_definitions.any? %>
      <%= link_to "定義の内容を編集する（デフォルト値の変更）", edit_user_definition_path(@definition) %>
    <% else %>
      <%= link_to "定義の内容を編集する", new_definition_user_definitions_path(@definition) %>
    <% end %>
  <% else %>
      <%= link_to "定義の内容を編集する", edit_definition_path(@definition) %>
  <% end %>
</div>